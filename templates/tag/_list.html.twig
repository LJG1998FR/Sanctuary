<table class="container table table-light table-striped table-hover mt-3" data-controller="tag">
    <thead>
        <tr>
            <th class="col-1" scope="col">#</th>
            <th class="col-6" scope="col">Title 
                <a href="{{ path('admin_tag_index', {'field': 'name', 'order' : (order == "ASC" ? "DESC" : "ASC"), 'search': search }) }}" data-turbo-frame="tags_list">
                    <i class="link-dark bi bi-arrow-down-up"></i>
                </a>
            </th>
            <th class="text-center" scope="col">Actions</th>
        </tr>
    </thead>
    <tbody id="main-container">
        {% for tag in tagsByPage %}
            <tr>
                <td><input data-tagid={{ tag.id }} class="form-check-input delete-checkbox" type="checkbox" value="" id="delete_checkbox_{{tag.id}}" data-turbo-frame="tags_list"></td>
                <td class="table-light">{{ tag.name }}</td>
                <td class="table-light d-flex justify-content-center gap-3">
                    <button class="btn btn-info">
                        <a class="link-dark" href="{{ path('admin_tag_show', {'slugger': tag.slugger}) }}" data-turbo-frame="_top">
                            <i class="bi bi-eye-fill"></i>
                        </a>
                    </button>
                    <button class="btn btn-info">
                        <a class="link-dark" href="{{ path('admin_tag_edit', {'id': tag.id}) }}" data-turbo-frame="_top">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                    </button>
                    {{ include('tag/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <h2>No tags found. Maybe <a href="{{ path('admin_tag_new') }}" data-turbo-frame="_top">add one ?</a></h2>
        {% endfor %}
    </tbody>
</table>

{% if nb_pages > 1 %}
    <nav aria-label="tag navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item {{ (page == 1 ? "disabled" : "") }}">
                <a class="page-link" href="{{ path('admin_tag_index', {'page': page - 1, 'limit' : limit, 'field': field, 'order' : order, 'search': search}) }}" tabindex="-1" aria-disabled="{{ (page == 1 ? "true" : "false") }}" data-turbo-frame="tags_list">Previous</a>
            </li>
        
            {% for index in 1.. nb_pages %}
                <li class="page-item {{ (page == index ? "disabled" : "") }}"><a class="page-link" href="{{ path('admin_tag_index', {'page': index, 'limit' : limit, 'field': field, 'order' : order, 'search': search}) }}" data-turbo-frame="tags_list">{{ index }}</a></li>
            {% endfor %}
            <li class="page-item {{ page + 1 <= nb_pages ? "" : "disabled" }}">
                <a class="page-link" href="{{ path('admin_tag_index', {'page': page + 1, 'limit' : limit, 'field': field, 'order' : order, 'search': search}) }}" aria-disabled="{{ ( page + 1 <= nb_pages ? "false" : "true") }}" data-turbo-frame="tags_list">Next</a>
            </li>
        </ul>
    </nav>
{% endif %}