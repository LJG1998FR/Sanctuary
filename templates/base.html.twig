<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}The Sensual Jane Sanctuary{% endblock %} - {% block subtitle %} {% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
        <div data-turbo-permanent id="spinner" class="d-flex justify-content-center align-items-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
        {% block navbar %}
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between mx-3" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class={{ app.request.get('_route') == "dashboard" ? "'nav-link fw-bold'" : "nav-link" }} href="{{path('dashboard')}}">The Sensual Jane Sanctuary</a>
                        </li>
                        {# <li class="nav-item">
                            <a class={{ app.request.get('_route') == "app_tag_index" ? "'nav-link fw-bold'" : "nav-link" }} href="{{ path('app_tag_index') }}">All Tags</a>
                        </li> #}
                        <li class="nav-item">
                            <a class={{ app.request.get('_route') == "admin_video_index" or app.request.get('_route') == "admin_video_index_reverse" ? "'nav-link fw-bold'" : "nav-link" }} href="{{path('admin_video_index')}}">All Videos</a>
                        </li>
                         <li class="nav-item">
                            <a class={{ app.request.get('_route') == "admin_photo_collection_index" ? "'nav-link fw-bold'" : "nav-link" }} href="{{ path('admin_photo_collection_index') }}">Gallery</a>
                        </li>
                        {#<li class="nav-item">
                            <a class="nav-link" id="randomphoto" href="{{ path('admin_photo_random') }}">Random Photo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="randomvideo" href="{{ path('admin_video_random') }}">Random Video</a>
                        </li> #}
                        <li class="nav-item">
                            <a class={{ app.request.get('_route') == "admin_video_new" ? "'nav-link fw-bold'" : "nav-link" }} href="{{ path('admin_video_new') }}">Upload New Video</a>
                        </li>
                        <li class="nav-item">
                            <a class={{ app.request.get('_route') == "admin_photo_collection_new" ? "'nav-link fw-bold'" : "nav-link" }} href="{{ path('admin_photo_collection_new') }}">Add A Collection</a>
                        </li>
                    </ul>
                    <form class="form-inline my-2 my-lg-0 d-flex" id="searchform">
                        <input type="search" class="form-control" placeholder="Video, Photo Or Collection" aria-label="Search" id="query" autocomplete = off>
                        <button class="btn btn-outline-success">Submit</button>
                    </form>
                </div>
            </nav>
        {% endblock %}
        {% block body %}{% endblock %}
    </body>
</html>
